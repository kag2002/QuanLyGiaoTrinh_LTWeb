@model BTL.Models.HoSoTra

@{
    ViewData["Title"] = "SuaHoSoTra";
    Layout = "~/Views/Shared/Giaotrinh.cshtml";
}

<div class="col-md-12">
    <h1>Sửa hồ sơ trả</h1>
</div>
    <div class="col-md-8">
        <form asp-action="SuaHoSoTra">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="MaHstra" />
            <div class="form-group">
            
            <input type="hidden" asp-for="MaHsm" class="form-control" />
            
            </div>
            <div class="form-group">
                <label asp-for="NgayTra" class="control-label"></label>
                <input asp-for="NgayTra" class="form-control" />
                <span asp-validation-for="NgayTra" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TongTienPhat" class="control-label"></label>
                <input asp-for="TongTienPhat" class="form-control" />
                <span asp-validation-for="TongTienPhat" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NgayNopPhat" class="control-label"></label>
                <input asp-for="NgayNopPhat" class="form-control" />
                <span asp-validation-for="NgayNopPhat" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MaThuThu" class="control-label"></label>
                <select asp-for="MaThuThu" class="form-control" asp-items="ViewBag.MaThuThu"></select>
                <span asp-validation-for="MaThuThu" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            <a asp-action="TraGiaoTrinh">
                <button type="button" class="btn btn-info">Back to List</button>
            </a>
            </div>
        </form>
    </div>


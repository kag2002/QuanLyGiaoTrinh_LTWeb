
@{
    ViewData["Title"] = "Hosomuon";
    Layout = "~/Views/Shared/Giaotrinh.cshtml";
}
@using X.PagedList.Mvc.Core
@model X.PagedList.IPagedList<Hsmuon>
<hr />
<p>
    @TempData["Message"]
</p>
<div class="row">
                    <div  class="col-md-6 mx-auto text-center mb-5 section-heading">
                        <h2 class="mb-5">Danh sách Hồ sơ mượn</h2>
                    </div>
                </div>
<div>
    <p><a class="btn btn-primary pill text-white px-4"  asp-controller="Home" asp-action="themhosomuon">Thêm hồ sơ mượn</a></p>
</div>

<div  class="row">
@foreach (var item in Model)
{
        <div class="col-md-6 col-lg-4 mb-5" >
            <div class="hotel-room text-center">
                <a class="d-block mb-0 thumbnail"
            asp-controller="Home" asp-action="GTDetail"
           asp-route-magt="@item.MaHsm"><img src="../images/hsmuon.jpg" alt="Image" class="img-fluid"></a>
                <div class="hotel-room-body">
                    <h3 class="heading mb-0"><a href="#">@item.MaHsm</a></h3>
                    <strong class="price">@item.NgayMuon</strong>
                </div>
            <div>
                <p>
                        <a class="btn btn-primary pill text-white px-4"  asp-controller="Home" asp-action="XoaHS"
                   asp-route-mahsm="@item.MaHsm">Xóa hồ sơ mượn</a>
                </p>
            </div>
            <div>
                <p>
                        <a class="btn btn-primary pill text-white px-4" asp-controller="Home" asp-action="suahs"
                   asp-route-mahsm="@item.MaHsm">Sửa hồ sơ mượn</a>
                </p>
            </div>
            </div>
        </div>
}
</div>
<div class="site-block-27">
    <ul>
        @Html.PagedListPager(Model,page=>Url.Action("Hosomuon",new{page=page}))
    </ul>
</div>



<style>
    .pagination {
        justify-content: center;
    }
</style>
